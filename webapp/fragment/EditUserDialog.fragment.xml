<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:f="sap.ui.layout.form">
	<Dialog
		id="editUserDialog"
		title="Editar Usuario">
		<content>
			<f:SimpleForm
				editable="true"
				layout="ResponsiveGridLayout">
				<Label text="User ID" required="true"/>
				<Input id="editUserID" value="{USERID}" editable="false"/>
				
				<Label text="Nombre de Usuario" required="true"/>
				<Input id="editUserName" value="{USERNAME}"/>
				
				<Label text="Alias"/>
				<Input id="editAlias" value="{ALIAS}"/>
				
				<Label text="Email" required="true"/>
				<Input id="editEmail" value="{EMAIL}"/>
			</f:SimpleForm>
		</content>
		<beginButton>
			<Button
				text="Guardar"
				type="Emphasized"
				press=".onSaveEdit"/>
		</Button>
		<endButton>
			<Button
				text="Cancelar"
				press=".onCloseEditDialog"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>