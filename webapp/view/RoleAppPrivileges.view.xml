<mvc:View
	controllerName="fioriusuariosgrupossku.controller.RoleAppPrivileges"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
	<Page
		id="privilegesPage"
		title="Privilegios de App (ZTROL_APP_PRI_PRO)"
		showNavButton="true"
		navButtonPress=".onNavBack">
		<content>
			<Table
				id="privilegesTable"
				class="sapUiResponsiveMargin"
				width="auto"
				items="{/roleAppPrivileges}"
				mode="SingleSelectLeft"
				selectionChange=".onSelectionChange">
				
				<headerToolbar>
					<Toolbar>
						<SearchField
							id="privSearchField"
							width="50%"
							liveChange=".onSearch"/>
						<ToolbarSpacer/>
						<Button
							icon="sap-icon://add"
							tooltip="Crear Privilegio"
							press=".onAdd"/>
						<Button
							icon="sap-icon://edit"
							tooltip="Editar Privilegio"
							enabled="{viewState>/editEnabled}"
							press=".onEdit"/>
						<Button
							icon="sap-icon://delete"
							tooltip="Borrar Privilegio"
							enabled="{viewState>/deleteEnabled}"
							press=".onDelete"/>
					</Toolbar>
				</headerToolbar>
				
				<columns>
					<Column><Text text="ID Rol"/></Column>
					<Column><Text text="ID App"/></Column>
					<Column><Text text="ID Privilegio"/></Column>
					<Column><Text text="ID Proceso"/></Column>
					<Column><Text text="ID Vista"/></Column>
					<Column><Text text="Activo"/></Column>
				</columns>
				
				<items>
					<ColumnListItem type="Active">
						<cells>
							<Text text="{ROLEID}"/>
							<Text text="{APPID}"/>
							<Text text="{PRIVILEGEID}"/>
							<Text text="{PROCESSID}"/>
							<Text text="{VIEWID}"/>
							<Switch state="{ACTIVED}" enabled="false"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
	</Page>
</mvc:View>