<mvc:View
	controllerName="fioriusuariosgrupossku.controller.Users"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
	<Page
		id="usersPage"
		title="Usuarios"
		showNavButton="true"
		navButtonPress=".onNavBack">
		<content>
			<Table
				id="usersTable"
				class="sapUiResponsiveMargin"
				width="auto"
				items="{/users}"
				mode="SingleSelectLeft"
				selectionChange=".onSelectionChange">
				
				<headerToolbar>
					<Toolbar>
						<SearchField
							id="userSearchField"
							width="50%"
							liveChange=".onSearch"/>
						<ToolbarSpacer/>
						<Button
							icon="sap-icon://add"
							tooltip="Crear Usuario"
							press=".onAddUser"/>
						<Button
							icon="sap-icon://edit"
							tooltip="Editar Usuario"
							enabled="{viewState>/editEnabled}"
							press=".onEditUser"/>
						<Button
							icon="sap-icon://delete"
							tooltip="Borrar Usuario"
							enabled="{viewState>/deleteEnabled}"
							press=".onDeleteUser"/>
					</Toolbar>
				</headerToolbar>
				
				<columns>
					<Column>
						<Text text="User ID"/>
					</Column>
					<Column minScreenWidth="Tablet" demandPopin="true">
						<Text text="Nombre de Usuario"/>
					</Column>
					<Column minScreenWidth="Tablet" demandPopin="true">
						<Text text="Alias"/>
					</Column>
					<Column>
						<Text text="Correo ElectrÃ³nico"/>
					</Column>
				</columns>
				
				<items>
					<ColumnListItem type="Active">
						<cells>
							<Text text="{USERID}"/>
							<Text text="{USERNAME}"/>
							<Text text="{ALIAS}"/>
							<Text text="{EMAIL}"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
	</Page>
</mvc:View>